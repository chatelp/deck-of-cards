    "react-native-reanimated": "^3.6.0 || ^4.1.0"
  },
  "dependencies": {
    "@deck/core": "workspace:*",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-native": "0.72.8",
    "react-native-gesture-handler": "^2.28.0"
  },
  "scripts": {
    "dev": "tsc -b tsconfig.json --watch --preserveWatchOutput",
    "build": "tsc -b tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
