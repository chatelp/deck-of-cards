{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "types": ["react"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../deck-core" }]
}
