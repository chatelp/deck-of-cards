{
  "name": "deck-mobile",
  "version": "0.1.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "start": "expo start --dev-client",
    "dev": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "detox:build:ios": "detox build --config-path ./detox.config.js --configuration ios.sim.release",
    "detox:test:ios": "detox test --config-path ./detox.config.js --configuration ios.sim.release",
    "test:visual:mobile": "pnpm run detox:build:ios && pnpm run detox:test:ios"
  },
  "dependencies": {
    "@deck/core": "workspace:*",
    "@deck/rn": "workspace:*",
    "expo": "~54.0.13",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "detox": "^20.14.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "typescript": "~5.9.2"
  }
}
